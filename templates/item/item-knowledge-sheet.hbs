{{!-- templates/item/item-knowledge-sheet.hbs --}}
<form class="{{cssClass}}" autocomplete="off">

  {{> "systems/dungeon-stone/templates/item/parts/_item-header.hbs"}}

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Описание</a>
    <a class="item" data-tab="properties">Свойства</a>
  </nav>

  <section class="sheet-body">

    <div class="tab description" data-group="primary" data-tab="description">
      <div class="editor-container">
        {{editor system.description target="system.description" button=true editable=editable engine="prosemirror" collaborate=false}}
      </div>
    </div>

    <div class="tab" data-group="primary" data-tab="properties">
      
      <div class="panel">
        <div class="panel-header"><i class="fas fa-book"></i> <h3>Параметры</h3></div>
        
        <div class="knowledge-type-badge">
          <select name="system.knowledgeType" style="background:transparent; border:none; font-weight:bold; width:100%; text-align:center;">
            <option value="lore" {{#if (eq system.knowledgeType "lore")}}selected{{/if}}>Знание</option>
            <option value="recipe" {{#if (eq system.knowledgeType "recipe")}}selected{{/if}}>Рецепт</option>
            <option value="language" {{#if (eq system.knowledgeType "language")}}selected{{/if}}>Язык</option>
            <option value="technique" {{#if (eq system.knowledgeType "technique")}}selected{{/if}}>Техника</option>
          </select>
        </div>

        <div class="form-group">
          <label>Уровень владения</label>
          <input type="number" name="system.value" value="{{system.value}}" min="0"/>
        </div>
      </div>

      {{#if (eq system.knowledgeType "recipe")}}
      <div class="panel">
        <div class="panel-header"><i class="fas fa-flask"></i> <h3>Рецепт</h3></div>
        <div class="rigid-grid">
          <div class="form-group"><label>Создаёт (ID)</label><input type="text" name="system.createsItemId" value="{{system.createsItemId}}"/></div>
          <div class="form-group"><label>Сложность (DC)</label><input type="number" name="system.craftDC" value="{{system.craftDC}}"/></div>
          <div class="form-group full-row"><label>Время изготовления</label><input type="text" name="system.craftTime" value="{{system.craftTime}}"/></div>
        </div>
      </div>
      {{/if}}

    </div>

  </section>
</form>