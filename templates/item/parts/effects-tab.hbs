{{!-- templates/item/parts/effects-tab.hbs --}}
<div class="tab effects" data-group="primary" data-tab="effects">
    <div class="panel">
        <div class="panel-header">
            <i class="fas fa-bolt"></i>
            <h3>Активные эффекты</h3>
        </div>

        {{#if effects}}
        <div class="effects-list">
            {{#each effects as |effect|}}
            <div class="effect-item {{#if effect.disabled}}disabled{{/if}}" data-effect-id="{{effect.id}}">
                <img class="effect-img" src="{{effect.img}}" alt="{{effect.name}}"/>
                <span class="effect-name">{{effect.name}}</span>
                <div class="effect-controls">
                    <a class="effect-toggle {{#unless effect.disabled}}active{{/unless}}" title="Включить/Выключить">
                        <i class="fas {{#if effect.disabled}}fa-eye-slash{{else}}fa-eye{{/if}}"></i>
                    </a>
                    <a class="effect-edit" title="Редактировать">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="effect-delete" title="Удалить">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p style="text-align:center; color:#666; font-size:12px; padding:20px;">
            Нет активных эффектов
        </p>
        {{/if}}

        <button type="button" class="effect-create effect-create-btn">
            <i class="fas fa-plus"></i>
            Создать эффект
        </button>
    </div>
</div>
