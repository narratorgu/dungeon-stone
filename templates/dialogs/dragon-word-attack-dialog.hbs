<div class="dungeon-dialog-content" style="background: #151515; color: #e0e0e0; font-family: 'Signika', sans-serif; padding: 10px; border-radius: 4px;">
    
    <div style="background: #000; padding: 10px; text-align: center; border: 1px solid #8e44ad; border-radius: 4px; margin-bottom: 15px;">
        <span style="font-size: 16px; font-weight: bold; text-transform: uppercase; color: #d2b4de; display: block;">{{item.name}}</span>
        <span style="font-size: 12px; color: #9b59b6;">Слово Дракона • {{item.system.dpCost}} DP</span>
    </div>

    <form>
        <!-- ВТОРИЧНЫЙ АТРИБУТ -->
        <div class="form-group" style="margin-bottom: 12px;">
            <label style="color: #bbb; font-size: 11px; text-transform: uppercase;">Доп. Атрибут</label>
            <select name="secondaryStat" style="width: 100%; background: #222; color: #fff; border: 1px solid #8e44ad; height: 30px;">
                <option value="none">[НЕТ]</option>
                {{#each subAttributes}}<option value="{{this.key}}">{{this.label}}</option>{{/each}}
            </select>
        </div>

        <!-- ЗНАНИЕ -->
        <div class="form-group" style="margin-bottom: 12px;">
            <label style="color: #bbb; font-size: 11px; text-transform: uppercase;">Знание</label>
            <select name="knowledgeStat" style="width: 100%; background: #222; color: #fff; border: 1px solid #8e44ad; height: 30px;">
                <option value="none">[НЕТ]</option>
                {{#each knowledges}}<option value="{{this.id}}">{{this.name}} ({{this.val}})</option>{{/each}}
            </select>
        </div>

        <!-- РЕЖИМ ЗАЩИТЫ -->
        <div class="form-group" style="margin-bottom: 15px;">
            <label style="color: #9b59b6; font-size: 11px; text-transform: uppercase;">Режим Защиты Цели</label>
            <select name="defenseMode" style="width: 100%; background: #1a0a2e; color: #d2b4de; border: 1px solid #8e44ad; height: 30px; font-weight: bold;">
                <option value="passive">Пассивная (КС)</option>
                <option value="active_opp">Активное Противостояние</option>
                <option value="active_def">Активная Защита (Щит/Уворот)</option>
                <option value="full_cover">Полное Укрытие</option>
            </select>
        </div>

        <!-- МОДИФИКАТОРЫ -->
        <div style="font-size: 10px; color: #888; border-top: 1px solid #8e44ad; padding-top: 5px; margin-bottom: 5px;">МОДИФИКАТОРЫ</div>
        <div style="display: flex; gap: 5px;">
            <div style="flex:1"><label style="font-size:9px; display:block; text-align:center;">Пул</label><input type="number" name="modPool" value="0" style="width:100%; background:#000; color:#d2b4de; text-align:center; border: 1px solid #8e44ad;"></div>
            <div style="flex:1"><label style="font-size:9px; display:block; text-align:center;">КС</label><input type="number" name="modDC" value="0" style="width:100%; background:#000; color:#d2b4de; text-align:center; border: 1px solid #8e44ad;"></div>
            <div style="flex:1"><label style="font-size:9px; display:block; text-align:center;">КУ</label><input type="number" name="modKU" value="0" style="width:100%; background:#000; color:#d2b4de; text-align:center; border: 1px solid #8e44ad;"></div>
        </div>

        <hr style="border-top:1px solid #8e44ad; margin: 10px 0;">

        <!-- УРОН -->
        <div style="display: flex; gap: 10px;">
            <div style="flex: 2;">
                <label style="font-size:10px; color:#9b59b6;">Урон</label>
                <input type="text" name="damage" value="{{damage}}" style="width:100%; background:#222; color:#fff; border:1px solid #8e44ad;">
            </div>
            <div style="flex: 1;">
                <label style="font-size:10px; color:#9b59b6;">Тип</label>
                <select name="damageType" style="width:100%; background:#222; color:#fff; border:1px solid #8e44ad;">
                    {{#each damageTypes}}<option value="{{@key}}" {{#if (eq @key ../damageType)}}selected{{/if}}>{{this}}</option>{{/each}}
                </select>
            </div>
        </div>
    </form>
</div>
