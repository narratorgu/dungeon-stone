<div class="dungeon-dialog-content" style="background: #151515; color: #e0e0e0; font-family: 'Signika', sans-serif; padding: 10px; border-radius: 4px;">
    
    <div style="background: linear-gradient(135deg, #2a1a00, #1a0a00); padding: 10px; text-align: center; border: 1px solid #d4af37; border-radius: 4px; margin-bottom: 15px;">
        <span style="font-size: 16px; font-weight: bold; text-transform: uppercase; color: #ffd700; display: block;">{{ability.name}}</span>
        <span style="font-size: 12px; color: #b8860b;">{{item.name}} • Атака: {{attrLabel}} ({{attrVal}})</span>
    </div>

    <form>
        <!-- ВТОРИЧНЫЙ АТРИБУТ -->
        <div class="form-group" style="margin-bottom: 12px;">
            <label style="color: #bbb; font-size: 11px; text-transform: uppercase;">Доп. Атрибут</label>
            <select name="secondaryStat" style="width: 100%; background: #222; color: #fff; border: 1px solid #444; height: 30px;">
                <option value="none">[НЕТ]</option>
                {{#each subAttributes}}<option value="{{this.key}}">{{this.label}}</option>{{/each}}
            </select>
        </div>

        <!-- ЗНАНИЕ -->
        <div class="form-group" style="margin-bottom: 12px;">
            <label style="color: #bbb; font-size: 11px; text-transform: uppercase;">Знание</label>
            <select name="knowledgeStat" style="width: 100%; background: #222; color: #fff; border: 1px solid #444; height: 30px;">
                <option value="none">[НЕТ]</option>
                {{#each knowledges}}<option value="{{this.id}}">{{this.name}} ({{this.val}})</option>{{/each}}
            </select>
        </div>

        <!-- РЕЖИМ ЗАЩИТЫ -->
        <div class="form-group" style="margin-bottom: 15px;">
            <label style="color: #d4af37; font-size: 11px; text-transform: uppercase;">Режим Защиты Цели</label>
            <select name="defenseMode" style="width: 100%; background: #2a1a00; color: #ffd700; border: 1px solid #8b4513; height: 30px; font-weight: bold;">
                <option value="passive">Пассивная (КС)</option>
                <option value="active_opp">Активное Противостояние</option>
                <option value="active_def">Активная Защита (Щит/Уворот)</option>
                <option value="full_cover">Полное Укрытие</option>
            </select>
        </div>

        <!-- МОДИФИКАТОРЫ -->
        <div style="font-size: 10px; color: #888; border-top: 1px solid #444; padding-top: 5px; margin-bottom: 5px;">МОДИФИКАТОРЫ</div>
        <div style="display: flex; gap: 5px;">
            <div style="flex:1"><label style="font-size:9px; display:block; text-align:center;">Пул</label><input type="number" name="modPool" value="0" style="width:100%; background:#000; color:#fff; text-align:center;"></div>
            <div style="flex:1"><label style="font-size:9px; display:block; text-align:center;">КС</label><input type="number" name="modDC" value="0" style="width:100%; background:#000; color:#fff; text-align:center;"></div>
            <div style="flex:1"><label style="font-size:9px; display:block; text-align:center;">КУ</label><input type="number" name="modKU" value="0" style="width:100%; background:#000; color:#fff; text-align:center;"></div>
        </div>

        <hr style="border-top:1px solid #444; margin: 10px 0;">

        <!-- ИНФО ОБ УРОНЕ -->
        <div style="display: flex; gap: 10px; align-items: center; background: rgba(0,0,0,0.3); padding: 8px; border-radius: 4px;">
            <div style="flex: 2; text-align: center;">
                <div style="font-size: 10px; color: #888;">Урон</div>
                <div style="font-size: 16px; color: #ff6b6b; font-weight: bold;">{{ability.damage}}</div>
            </div>
            <div style="flex: 1; text-align: center;">
                <div style="font-size: 10px; color: #888;">Тип</div>
                <div style="font-size: 12px; color: #ffa500;">{{lookup ../damageTypes ability.damageType}}</div>
            </div>
            {{#if ability.range}}
            <div style="flex: 1; text-align: center;">
                <div style="font-size: 10px; color: #888;">Дальность</div>
                <div style="font-size: 12px; color: #88ccff;">{{ability.range}} м</div>
            </div>
            {{/if}}
        </div>
        
        {{#if (neq ability.areaType "none")}}
        <div style="margin-top: 8px; text-align: center; color: #d4af37; font-size: 11px;">
            <i class="fas fa-bullseye"></i> Область: {{ability.areaType}} ({{ability.areaSize}} м)
        </div>
        {{/if}}
    </form>
</div>
